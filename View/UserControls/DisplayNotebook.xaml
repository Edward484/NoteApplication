<UserControl x:Class="NoteApplication.View.UserControls.DisplayNotebook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoteApplication.View.UserControls" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:NoteApplication.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.Resources>
        <vm:NotesViewModel x:Key="vm"/>
        <Storyboard x:Key="Storyboard1">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="NotebookTextBlock" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFE41F1F"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Storyboard2">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="NotebookTextBlock" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFE41F1F"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="White"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.GotFocus" SourceName="NotebookTextBlock">
            <BeginStoryboard Storyboard="{StaticResource Storyboard1}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="FrameworkElement.LostFocus" SourceName="NotebookTextBlock">
            <BeginStoryboard Storyboard="{StaticResource Storyboard2}"/>
        </EventTrigger>
    </UserControl.Triggers>
    <StackPanel>
        <TextBlock x:Name="NotebookTextBlock"
                   Text="{Binding Name,Mode=TwoWay}"
                   Foreground="White"
                   Margin="15"
                   FontSize="16"
                   FontWeight="bold"
                   VerticalAlignment="Center"
                   Visibility="{Binding NotebookNameVisibility, Source={StaticResource vm}}">

        </TextBlock>

        <TextBox    
            x:Name="RenameNotebookTextBox" 
            Text="{Binding Name, Mode=TwoWay}"
            Visibility="{Binding NotebookRenameVisibility, Source={StaticResource vm}}"
            FontSize="16"
            VerticalAlignment="Center"
            Margin="15"
            Foreground="White" 
            Background="MidnightBlue" 
            SelectionOpacity="0" 
            BorderThickness="0,0,0,0" 
            HorizontalAlignment="Center"
            Width="180">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="LostFocus">
                    <i:InvokeCommandAction 
                        Command="{Binding RenameEndEditCommandNotebook, Source={StaticResource vm}}"
                        CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
    </StackPanel>
</UserControl>
